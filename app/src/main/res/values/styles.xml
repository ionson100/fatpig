<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">#81e652</item>
    </style>

    <style name="AppActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">#fdfdfd</item>
        <item name="android:textColorHint">#aeabab</item>
        <item name="android:textColor">#060606</item>
        <item name="colorPrimary">#fcfdfb</item>
        <item name="colorPrimaryDark">#edf7e8</item>
        <item name="colorAccent">#81e652</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#faf9f9</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="editBase">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#083503</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="buttomHead">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#05803A</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>

    </style>

    <style name="buttonRound"  >
       <item name="android:background">@drawable/button_background_round</item>

    </style>

    <style name="buttonRoundDragDrop"  >
        <item name="android:background">@drawable/button_background_round_drag_drop</item>

    </style>

</resources>
