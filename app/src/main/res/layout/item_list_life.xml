        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">
            <TextView
                android:text="Комментарии:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">
            <TextView
                android:id="@+id/life_comment"
                android:text="Дата:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
