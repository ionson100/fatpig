<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.omsk.bitnic.fatpig.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="1dp"
            android:orientation="vertical"
            android:id="@+id/panel_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/panelBase"
            android:layout_weight="0.12">
            <LinearLayout
                android:id="@+id/panel1"
                android:gravity="center_vertical"
                android:background="@color/color1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/panel_text1"
                    android:paddingLeft="10dp"
                    android:text="238"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout

                android:id="@+id/panel2"
                android:gravity="center_vertical"
                android:background="@color/color2"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/panel_text2"
                    android:paddingLeft="10dp"
                    android:text="238"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/panel3"
                android:gravity="center_vertical"
                android:background="@color/color3"
                android:layout_width="220dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/panel_text3"
                    android:paddingLeft="10dp"
                    android:text="238"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/panel4"
                android:gravity="center_vertical"
                android:background="@color/color4"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/panel_text4"
                    android:paddingLeft="10dp"
                    android:text="238"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:padding="2dp"
            android:orientation="vertical"
            android:id="@+id/panel_base"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.83"
            style="@style/panelBase">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
