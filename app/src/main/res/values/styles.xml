<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppActivity" parent="Theme.AppCompat.NoActionBar">

        <!--<item name="android:alertDialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Alert</item>-->
        <item name="android:actionMenuTextColor">#fdfdfd</item>

        <item name="android:textColorHint">#aeabab</item>
        <item name="android:textColor">#060606</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>

    </style>
    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#faf9f9</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">

        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">10dp</item>

    </style>







    <style name="panelBase">
        <item name="android:background">@drawable/panel_base</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="editBase">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#083503</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="buttomHead">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#05803A</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>

    </style>

</resources>
