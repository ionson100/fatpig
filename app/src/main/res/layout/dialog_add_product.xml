<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:selectAllOnFocus="true"
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_add_name"
        style="@style/editBase"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название продукта:"
        android:inputType="text"/>

    <EditText
        android:selectAllOnFocus="true"
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_add_calor"
        style="@style/editBase"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Калории:"
        android:inputType="number"/>
    <CheckBox
        android:text="@string/select"
        android:id="@+id/checkBox_pref"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_dialog_add_canell"
            style="@style/buttomHead"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/bt_dialog_add_ok"
            style="@style/buttomHead"
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>




</LinearLayout>